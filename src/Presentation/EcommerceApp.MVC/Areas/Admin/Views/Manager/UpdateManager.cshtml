@model EcommerceApp.Application.Models.DTOs.UpdateManagerDTO

@{
    ViewData["Title"] = "UpdateManager";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>UpdateManager</h1>

<h4>UpdateManagerDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateManager" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Surname" class="control-label"></label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UploadPath" class="control-label"></label>
                <input type="file" asp-for="UploadPath" class="form-control" />
                <span asp-validation-for="UploadPath" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
